{
  "expo": {
    "name": "interligadaHitsApp",
    "slug": "interligadahitsapp",
    "version": "2.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFC655"
    },
    "platforms": [
      "ios",
      "android"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.interligadahits.interligadaHitsApp",
      "infoPlist": {
        "UIBackgroundModes": [
          "audio"
        ]
      }
    },
    "android": {
      "package": "com.interligadahits.interligadaHitsApp",
      "permissions": [
        "WAKE_LOCK",
        "INTERNET"
      ],
      "blockedPermissions": ["RECORD_AUDIO"],
      "versionCode": 2 
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true
          },
          "ios": {},
          "infoPlist": {
            "UIStatusBarStyle": "UIStatusBarStyleDarkContent",
            "UIViewControllerBasedStatusBarAppearance": false
          }
        }
      ]
    ],
    "owner": "merola",
    "extra": {
      "eas": {
        "projectId": "4d3c5f82-35f0-4015-a75f-b3ead69fa4fb"
      }
    }
  }
}
